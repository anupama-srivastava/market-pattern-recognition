{
  "phase2": {
    "name": "Advanced Trading System Phase 2",
    "version": "2.0.0",
    
    "portfolio_optimization": {
      "methods": ["mean_variance", "risk_parity", "black_litterman"],
      "risk_free_rate": 0.02,
      "target_return": 0.12,
      "max_position_size": 0.1,
      "rebalance_frequency": "monthly"
    },
    
    "sentiment_analysis": {
      "sources": ["news", "twitter", "reddit", "stocktwits"],
      "models": ["vader", "finbert", "custom_bert"],
      "update_frequency": "hourly",
      "sentiment_threshold": 0.3
    },
    
    "pattern_recognition": {
      "patterns": ["doji", "hammer", "engulfing", "morning_star", "evening_star"],
      "confidence_threshold": 0.75,
      "timeframes": ["1d", "4h", "1h", "15m"],
      "cv_models": ["opencv", "cnn_lstm"]
    },
    
    "multi_asset": {
      "assets": ["stocks", "etfs", "crypto", "forex"],
      "correlation_lookback": 252,
      "sector_rotation": true,
      "risk_factors": ["market", "size", "value", "momentum"]
    },
    
    "production": {
      "mlflow_tracking_uri": "file:./mlruns",
      "feature_store": "redis://localhost:6379",
      "monitoring_port": 8080,
      "alert_webhook": "https://hooks.slack.com/services/YOUR/WEBHOOK/URL"
    },
    
    "risk_management": {
      "max_drawdown": 0.15,
      "var_confidence": 0.95,
      "position_sizing": "kelly_criterion",
      "stop_loss": 0.08,
      "take_profit": 0.16
    }
  }
}
